    <style>
        .mainContainer article {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .post-container {
            padding: 20px 20px;
            display: inline-block;
            height: 30vh;
            border-radius: 5px;
            /* border: 1px solid rgba(128, 128, 128, 0.071); */
            box-shadow: 0px 0px 5px 0px gray;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .post-container h2 {
            color: gray;

        }

        .post-container .post-meta {
            display: flex;
            justify-content: space-between;
            color: wheat;
        }

        .post-container .post-time {
            display: flex;
            gap: 35px;
        }


        .post-container .post-content {
            /* text-overflow: clip; */
            /* overflow: hidden; */
            text-overflow: ellipsis " [..]";

        }

        .post-container .post-content p {
            line-height: 1 !important;
            text-overflow: ellipsis;
            height: 100px;
            overflow: hidden;
            /* white-space: nowrap; */


        }

        .post-container .btns {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 20px;
        }

        .post-container .btns button:nth-child(odd) {
            background-color: blue;
            padding: 2px 8px;
            border-radius: 5px;
            border: 0.1px groove gray
        }

        .post-container .btns button:nth-child(even) {
            background-color: red;
            border: 0.1px thin gray;
            padding: 2px 8px;
            border-radius: 5px;
        }

        .main .videos .heading {
            animation: move2 var(--ease-elastic-in-1) 1s infinite alternate;
        }

        @keyframes move2 {
            50% {
                filter: blur(20px);
                transform: skew(45deg);
            }
        }
    </style>
</head>
<div>

    <div class="container">
        <div class="navheader">
            <img src="/favicon_io/android-chrome-192x192.png" alt="">

            <ul>
                <%for(i=0;i<menu.length;i++){%>
                
                    <li><a href="<%=menu[i].navigation%>">
                            <%=menu[i].name%>
                        </a></li>
                
                    <%}%>

            </ul>

        </div>
        <div class="main">
            <div class="videos">
                <video autoplay muted loop id="myVideo">
                    <source src="videos/3163534-uhd_2560_1440_30fps.mp4" type="video/mp4">
                    Your browser does not support HTML5 video.
                </video>
                <div class="heading">
                    <h1><%=title%></h1>
                    <!-- <h1></h1> -->
                </div>
            </div>
            <section>
                <div class="mainContainer">
                    <article>
                        
                    <% if(posts){ posts.forEach(item=> { %>
                        
                        <a class="post-container" href="post/2">
                            <h2 class="post-title">
                                <%= item.title %>
                            </h2>
                            <div class="post-meta">
                                <span class="post-author"><%=item.authors%></span>
                                <span class="post-time"><%=item.date%></span>
                            </div>
                            <div class="post-content">
                                <p><%=item.content%></p>
                            </div>
                            <div class="btns">
                                <button class="edit">Edit</button>
                                <button class="del">Delete</button>
                            </div>
                        </a>

                        <%})}%>
                     
                        <div class="btns">
                            
                            <% if (currentPage> 1) { %>
                                <a href="/posts?page=<%= currentPage - 1 %>"><button>Previous</button></a>
                                <% } %>
                            
                            <% if (currentPage < totalPages) { %>
                                        <a href="/posts?page=<%= currentPage + 1 %>"><button>Next</button></a>
                           <% } %>
                            
                        </div>

                    </article>
                    <aside>
                        <h2>Trending</h2>
                        <% if(trends){for(i=0;i<trends.length;i++){ %>
                            <a class="trend" href="">
                                <p class="num">
                                    <%=i+1%>.
                                </p>
                                <div class="trendContainer">
                                    <p class="title">
                                        <%=trends[i].title%>
                                    </p>
                                    <div class="authorDesign">
                                        <%=trends[i].authors%><span> in </span>
                                            <%=trends[i].category%>
                                    </div>
                                    <div class="timestamp">
                                        <p class="date">
                                            <%=trends[i].date%>
                                        </p>
                                        <!-- <p class="mins">6mins read</p> -->
                                    </div>
                                </div>
                            </a>
                            <%}}%>
